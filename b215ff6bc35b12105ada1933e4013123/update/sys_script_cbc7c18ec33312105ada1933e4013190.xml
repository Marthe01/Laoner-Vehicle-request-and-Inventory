    var serviceGr = new GlideRecord('x_1538165_lva_vehicle_servicing');
    serviceGr.addQuery('vehicle_tracker', current.sys_id);
    serviceGr.addQuery('tracker_status', 'open');
    serviceGr.query(); // execute the query

    if (!serviceGr.next()) {
        var newService = new GlideRecord('x_1538165_lva_vehicle_servicing');
        var serviceGd = GlideDateTime(); // Create Variable for GlideDate
        newService.initialize(); // Initialize the creation of new record in servicing table using GlideRecord variable


        // Populate the required fields to create new ticket
        newService.setValue('vehicle_tracker', current.sys_id);
        newService.setValue('vehicle', current.vehicle);
        newService.setValue('vehicle_status', 'in_service');
        newService.setValue('sent_for_servicing', serviceGd);
        newService.setValue('ticket_status', 'open'); // set the value of the ticket to open
        newService.insert(); // insert new record
    }

})(current, previous);]]></script>
